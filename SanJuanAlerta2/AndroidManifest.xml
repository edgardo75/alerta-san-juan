<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edadevsys.sanjuanalerta2"
    android:versionCode="17"
    android:versionName="1.7">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.edadevsys.sanjuanalerta2.MainActivity"

            android:alwaysRetainTaskState="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edadevsys.sanjuanalerta2.SmsActivity"
            android:label="@string/title_activity_sms"></activity>
        <activity
            android:name="com.edadevsys.sanjuanalerta2.ConfigAppActivity"
            android:label="@string/title_activity_config_app"></activity>
        <activity
            android:name="com.edadevsys.sanjuanalerta2.ContactsMainActivity"
            android:label="@string/title_activity_contact_main_app"></activity>
        <activity
            android:name="com.edadevsys.sanjuanalerta2.ContactList"
            android:label="@string/title_activity_contact_main_db_app"
            android:uiOptions="splitActionBarWhenNarrow"></activity>
        <activity
            android:name="com.edadevsys.sanjuanalerta2.MainActivityListContact"
            android:label="@string/title_activity_contact_main_list_app"></activity>

    </application>

</manifest>
