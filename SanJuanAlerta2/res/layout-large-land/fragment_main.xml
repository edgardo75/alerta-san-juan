<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"

    >

    <TextView
        android:id="@+id/textLabelMovil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLabelAlerta"
        android:layout_centerHorizontal="true"
        android:text="@string/text_moviles"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold|italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textLabelAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemContact"
        android:layout_centerHorizontal="true"
        android:text="@string/text_alert_main"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/itemContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textLabelAlerta"
        android:layout_alignLeft="@+id/textLabelAlerta"
        android:layout_alignParentTop="true"
        android:text="@string/text_sanjuan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textDataPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textSend911"
        android:layout_alignLeft="@+id/textSend911"
        android:layout_below="@+id/textSend911"
        android:text="@string/text_title_long"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textDataPersonal"
        android:layout_alignStart="@+id/textLabelMovil"
        android:layout_alignLeft="@+id/textLabelMovil"
        android:layout_alignEnd="@+id/imgViewMinGob"
        android:layout_alignRight="@+id/imgViewMinGob"
        android:layout_alignTop="@+id/textSend911"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textLocationAndStreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textDataPersonal"
        android:layout_alignLeft="@+id/textDataPersonal"
        android:layout_below="@+id/imageBtnSms"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/imgViewMinGob"
        android:layout_toLeftOf="@+id/imgViewMinGob"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textDataPersonal"
        android:layout_alignStart="@+id/textLabelMovil"
        android:layout_alignLeft="@+id/textLabelMovil"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textDataPersonal"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imgViewMinGob"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/text_context_icon_mg"
        android:src="@drawable/boton_mg_icon" />

    <ImageView
        android:id="@+id/imageViewSJ_Gob"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imgViewMinGob"
        android:contentDescription="@string/text_context_icon_gov_sj"
        android:src="@drawable/boton_sj_icon" />

    <TextView
        android:id="@+id/textSend911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLabelMovil"
        android:layout_toStartOf="@+id/textLabelAlerta"
        android:layout_toLeftOf="@+id/textLabelAlerta"
        android:text="@string/text_title_lat"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageBtnSms"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/textLabelMovil"
        android:layout_alignStart="@+id/textLabelMovil"
        android:layout_centerVertical="true"
        android:contentDescription="@string/text_context_icon_button_principal"
        android:scaleType="fitXY"
        android:src="@drawable/ic_btn_alert_logo" />

    <ProgressBar
        android:id="@+id/progressLocation"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textLabelAlerta"
        android:layout_alignRight="@+id/textLabelAlerta"
        android:layout_below="@+id/textLabelAlerta"
        android:visibility="invisible" />

</RelativeLayout>
