<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/textLabelAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/text_number"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewSJ_Gob"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgViewBtnAlert"
        android:contentDescription="@string/text_context_icon_mg"
        android:src="@drawable/boton_mg_icon" />

    <RadioGroup
        android:id="@+id/radioEmergencyNumberPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_optyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok" />

        <RadioButton
            android:id="@+id/radio_optno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:text="@string/no" />
    </RadioGroup>

    <TextView
        android:id="@+id/mCounter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextHomeAndOrNameSurename"
        android:layout_marginTop="5dp"
        android:text="@string/text_30"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imgViewBtnAlert"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/mCounter1"
        android:layout_alignLeft="@+id/mCounter1"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/text_context_icon_gov_sj"
        android:src="@drawable/boton_sj_icon" />

    <TextView
        android:id="@+id/mCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewDataPersonal"
        android:layout_alignLeft="@+id/textViewDataPersonal"
        android:layout_below="@+id/messageConfigForPolice"
        android:layout_marginTop="5dp"
        android:text="@string/text_15"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textLabelMovil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mCounter"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/text_message"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewDataPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mCounter1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/text_data_personal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextHomeAndOrNameSurename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mCounter"
        android:ems="10"
        android:hint="@string/text_hint_address_personal_config"
        android:maxLength="30" />

    <EditText
        android:id="@+id/messageConfigForPolice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextHomeAndOrNameSurename"
        android:layout_alignLeft="@+id/editTextHomeAndOrNameSurename"
        android:layout_below="@+id/radioEmergencyNumberPhone"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="@string/text_hint_message_config"
        android:maxLength="15" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textLabelAlerta"
        android:layout_alignLeft="@+id/textLabelAlerta"
        android:layout_below="@+id/textLabelAlerta"
        android:text="@string/emergency_number_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/text_config_app" />

</RelativeLayout>